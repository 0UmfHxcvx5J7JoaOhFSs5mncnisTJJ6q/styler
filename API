# API for styler package

## Exported functions

compute_parse_data_flat_with_ws(text)
compute_parse_data_nested(text)
get_transformers(strict = TRUE)
serialize_parse_data(parse_data_with_ws)
style_pkg(pkg = ".", transformers = get_transformers())
