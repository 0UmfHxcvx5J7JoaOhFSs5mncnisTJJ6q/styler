# API for styler package

## Exported functions

get_transformers(flat, ...)
get_transformers_flat(strict = TRUE)
get_transformers_nested(strict = TRUE, indent_by = 2)
style_pkg(pkg = ".", transformers = get_transformers_flat())
style_src(path = ".", transformers = get_transformers(), recursive = TRUE)
style_text(text, flat = FALSE, transformers = if (flat) get_transformers_flat() else get_transformers_nested())
